    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests"]
        },

        // In stall this package in editable mode.
        // Create mkdocs web-site under .examples/
        // directory and debug the library
        {
            "name": "Debug MkDocs",
            "type": "debugpy",
            "request": "launch",
            "module": "mkdocs",
            "args": ["serve"],
            "cwd": "${workspaceFolder}/.examples"
        }
    ]
}
