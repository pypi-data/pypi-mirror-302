#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C,W0212,W0718


"daemon"


import getpass
import os
import pwd
import sys


from nixt.main    import NAME, forever, scanner, wrap
from nixt.persist import modname, pidfile, pidname
from nixt.runtime import Errors


if os.path.exists("mods"):
    import mods.face as MODZ
else:
    MODZ = None


modpath = modname()


if os.path.exists(modpath):
    sys.path.insert(0, os.path.dirname(modpath))
    import mods.face as MODULES
else:
    MODULES = None


def daemon(verbose=False):
    pid = os.fork()
    if pid != 0:
        os._exit(0)
    os.setsid()
    pid2 = os.fork()
    if pid2 != 0:
        os._exit(0)
    if not verbose:
        with open('/dev/null', 'r', encoding="utf-8") as sis:
            os.dup2(sis.fileno(), sys.stdin.fileno())
        with open('/dev/null', 'a+', encoding="utf-8") as sos:
            os.dup2(sos.fileno(), sys.stdout.fileno())
        with open('/dev/null', 'a+', encoding="utf-8") as ses:
            os.dup2(ses.fileno(), sys.stderr.fileno())
    os.umask(0)
    os.chdir("/")
    os.nice(10)


def errors():
    for err in Errors.errors:
        for line in err:
            print(line)


def privileges():
    pwnam = pwd.getpwnam(getpass.getuser())
    os.setgid(pwnam.pw_gid)
    os.setuid(pwnam.pw_uid)


def main():
    daemon(True)
    privileges()
    pidfile(pidname(NAME))
    scanner(MODZ, MODULES, init=True)
    forever()


if __name__ == "__main__":
    wrap(main)
    errors()
